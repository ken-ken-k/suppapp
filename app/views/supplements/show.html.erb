<section class="hero is-black">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        レシピ詳細
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= attachment_image_tag @supplement, :image %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @supplement.title %></p>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>詳細</th>
                </tr>
                <tr>
                  <td><%= simple_format @supplement.body %></td>
                </tr>
              </table>
              <% if @supplement.user.id == current_user.id %>
                <%= link_to "編集", edit_supplement_path(@supplement), class: "button is-black" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="column is-4">
        <article class="panel is-black">
          <p class="panel-heading">
            <%= @supplement.user.username %>
          </p>
          <div class="panel-block">
            <p class="control">
              <%= @supplement.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@supplement.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @supplement.user.username %>さんのページへ
          <% end %>
        </article>
      </div>
    </div>
  </div>
</section>







