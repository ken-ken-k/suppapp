<section class="hero is-black">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        検索一覧
      </h1>
      <%= form_with(url: search_supplements_path, local: true, method: :get, class: "search-form") do |form| %>
        <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
        <%= form.submit "検索", class: "search-btn" %>
      <% end %>
    </div>
  </div>
</section>


<section class="section">
  <div class="contents row">
    <div class="columns is-multiline">
      <% @supplements.each do |supplement| %>
        <%= render partial: "supplement", locals: { supplement: supplement } %>
      <% end %>
    </div>
  </div>
</section>