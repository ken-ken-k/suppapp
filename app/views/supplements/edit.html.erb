<section class="hero is-black">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        レシピ編集
      </h1>
    </div>
  </div>
</section>

<% if @supplement.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@supplement.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @supplement.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @supplement do |f| %>
          <div class="field">
            <%= f.label :title, "サプリ名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "サプリ詳細", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "textarea" %>
          </div>

          <%= f.submit '投稿', class: "button is-black"%>
        <% end %>
      </div>
    </div>
  </div>
</section>